                          <div className="flex-1 flex flex-col items-center">
                            <div className="w-12 relative">
                              <div className="absolute bottom-0 w-full rounded-t" style={{ height: '54px', backgroundColor: colors.accent1 }}></div>
                            </div>
                            <div className="mt-2 text-xs font-medium">West</div>
                            <div className="text-xs">18%</div>
                          </div>
                        </div>
                        
                        <div className="flex-1">
                          <h4 className="text-xs font-medium mb-2 text-gray-700">Key Regional Insights:</h4>
                          <ul className="text-xs space-y-1">
                            <li className="flex items-start">
                              <div className="w-2 h-2 mt-1 mr-2 rounded-full" style={{ backgroundColor: colors.accent2 }}></div>
                              <span>Southern markets show highest price sensitivity (38%)</span>
                            </li>
                            <li className="flex items-start">
                              <div className="w-2 h-2 mt-1 mr-2 rounded-full" style={{ backgroundColor: colors.accent2 }}></div>
                              <span>Northeast consumers prioritize quality over price</span>
                            </li>
                            <li className="flex items-start">
                              <div className="w-2 h-2 mt-1 mr-2 rounded-full" style={{ backgroundColor: colors.accent2 }}></div>
                              <span>Western region leads in sustainability concerns</span>
                            </li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  );
};

export default VertafyApp;
